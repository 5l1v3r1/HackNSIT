<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calories_left_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/calories_left_for_consumption"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/calories_for_recipe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/calories_left_tv"
        android:gravity="center"
        android:hint="Input calories.."
        android:textColor="@color/light_blue_primary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/find_recipes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calories_left_tv"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:text="Find recipes!"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/calories_left_tv"
        android:layout_marginTop="80dp" />

</RelativeLayout>